<%=form_for @location do |f|%>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div> 
    <div class="field"> 
        <%= f.hidden_field :user_id, :value => current_user.id %>  
    </div> 
    <div class="field">
        <%= f.label :street %>
        <%= f.text_field :street %>
    </div> 
    <div class="field">
        <%= f.label :apartment %>
        <%= f.text_field :apartment %>
    </div> 
    <div class="field"> 
        <%= f.label :city %>
        <%= f.text_field :city %>
    </div> 
    <div class="field"> 
        <%= f.label :state %>
        <%= f.text_field :state %>
    </div> 
    <div class="field"> 
        <%= f.label :country %>
        <%= f.text_field :country %>
    </div>
    <div class="field">
        <%= f.label :zipcode %>
        <%= f.number_field :zipcode %>
    </div> 
    <div class="actions"> 
        <%= f.submit %>
    </div> 
<% end %>