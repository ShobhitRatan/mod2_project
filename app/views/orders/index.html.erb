<h1>Orders</h1> 

<div><%= link_to 'Create Order', new_order_path %></div> 
<br /> 

<table> 
    <thead> 
        <tr>  
            <th>Location</th> 
            <th>Plant</th> 
            <th>Tool</th> 
            <th>Price</th> 
            <th>Weight</th> 
            <th>Order Status</th> 
            <th></th> 
        </tr> 
    </thead> 
    <tbody> 
        <% @orders.each do |order| %> 
            <tr> 
                <td><%= order.location.name %></td> 
                <td><%= order.plant.common_name %></td> 
                <td><%= order.tool.name %> 
                <td><%= order.price %></td> 
                <td><%= order.weight %></td> 
                <td> 
                    <%= link_to 'View', order %> 
                    <%= link_to 'Edit', edit_order_path(order) %> 
                    <%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure you want to delete this order?' } %> 
                </td> 
            </tr> 
        <% end %> 
    </tbody> 
</table> 